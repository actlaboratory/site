{% set site_name = "ACT Laboratory" %}
<!DOCTYPE html>
<html lang="ja" class="h-100">
<head prefix="og: http://ogp.me/ns#">
	<meta charset = "utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name = "twitter:card" content = "summary">
	<meta name = "twitter:site" content = "@act_laboratory">
	<meta property = "og:url" content = "{{ get_current_url() }}">
	{% if page_description == "" %}
	{% set page_description = "若い視覚障害者が集まり、アクセシブルなソフトウェアの開発・配布を行っています。" %}
	{% endif %}
	<meta name = "description" content = "{{ page_description }}">
	<meta property = "og:description" content = "{{ page_description }}">
	<meta property="og:site_name" content="{{ site_name }}">

	{% if not page_type == "website" or page_type == "product" or page_type == "article" %}
	{% set page_type = "article" %}
	{% endif %}
	{% set page_keywords = page_keywords|merge(["ACT laboratory","actlab","視覚障害","スクリーンリーダー","アクセシビリティー"]) %}
	<meta name="keywords" content = "{{ page_keywords|join(",") }}">
	<meta property="og:type" content = "{{ page_type }}">
	<meta property="og:title" content = "{{ page_title }} - {{ site_name }}">
	<title>{{ page_title }} - {{ site_name }}</title>
	{% block header_scripts_add %}{% endblock %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    {# font awsomeパッケージを利用します#}

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-168024631-1"></script>
    <script><!--
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-168024631-1');
    --></script>
</head>

<body>
{# サイトタイトル・広告 #}
<div class="container">
    <div class="row">
        <div class="mr-auto">
            <h1><a href="{{ get_base_path() }}/">{{ site_name }}</a></h1>
        </div>
        <div aria-hidden="true" class="mr-3" id="ad-area">
            <!--nobanner-->
        	<script type="text/javascript" src="https://cache1.value-domain.com/xa.j?site=actlab.s1010.xrea.com"></script>
        </div> 
    </div>
</div>
<div class="h2">
    <span> </span>
</div>
{# メニュー #}
{% include 'layout/menu.twig' %}

{# 本文 #}
<main role="main">
    <div class="container">
        {% block page_content %}{% endblock %}
    </div>
	<!-- Chrome系ブラウザが下余白を無視し、ヘッダが本文と重なるので対策 -->
	<div class="pt-5"></div>
</main>

{# フッタ #}
{% include 'layout/footer.twig' %}

{# 必須スクリプトをインポート #}
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/js/bootstrap.min.js"></script>
<script>
    <!--
    window.onload=function() {
        document.getElementById("ad-area").childNodes[4].setAttribute("tabindex", "-1");
    }
    -->
</script>

{# 追加でスクリプトがほしいときにぶっこまれます #}
{% block footer_scripts_add %}{% endblock %}
</body>
</html>
