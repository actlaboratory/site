{#レイアウト継承#}
{% extends "layout/layout.twig" %}

{# タイトル #}
{% block title %}公開ソフトウェア{% endblock %}

{# スタイルシートの追加 #}
{% block header_scripts_add %}
{% endblock %}

{# ページ本文 #}
{% block page_content %}
	<div class="jumbotron">
		<h2 class="text-center">
			公開ソフトウェア
		</h2>
		<div class="container px-5">
			<p>ここでは、私たちが開発・公開しているソフトウェアをご紹介しています。各ソフトウェアのページに、より詳細な説明とダウンロードリンクを記載しています。</p>
		</div>
	</div>


	{% for soft in softwares %}
		<div class="card">
			<div class="card-body">
				<div class="card-title text-white bg-primary">
					<div class="row">
						<div class="col-sx-12 col-sm-9 d-flex align-items-center px-5">
							<h3 class="h2 my-0">{{ soft.title }}</h3>
						</div>
						<div class="hidden-xs col-sm-3 align-items-center">
							<p class="my-1">バージョン:{{ soft.versionText }}</p>
							<p class="my-1">最終更新:{{ soft.released_at }}</p>
						</div>
					</div>
				</div>
				<div class="card-text">
					<div class="row py-3">
						<div class="col-sm-9">
							<div class="container pl-5">
								<p>{{ soft.description }}</p>
							</div>
						</div>
						<div class="hidden-xs col-sm-3">
							<a class="btn btn-primary" href="{{ soft.keyword }}">詳細・ダウンロード</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}

{# フッダ以降に追加する内容 #}
{% block footer_scripts_add %}
{% endblock %}
